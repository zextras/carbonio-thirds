targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-archive-zip"
pkgver="1.68"
pkgrel="2"
pkgdesc="Provide an interface to ZIP archive files"
pkgdesclong=(
  "Provide an interface to ZIP archive files"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends:apt=(
  "carbonio-perl-compress-raw-zlib"
  "perl"
)
depends:yum=(
  "carbonio-perl-compress-raw-zlib"
  "perl-core"
  "perl"
)
section="libs"
priority="important"
sources=(
  "https://cpan.metacpan.org/authors/id/P/PH/PHRED/Archive-Zip-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/Archive-Zip-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 
  make
}

package() {
  cd "${srcdir}/Archive-Zip-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
