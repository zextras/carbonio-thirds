pkgname="carbonio-perl-crypt-openssl-random"
pkgver="0.17"
pkgrel="1"
pkgdesc="OpenSSL/LibreSSL pseudo-random number generator access"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends__apt=(
  "carbonio-openssl"
  "perl"
)
depends__yum=(
  "carbonio-openssl"
  "perl-core"
  "perl"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/R/RU/RURBAN/Crypt-OpenSSL-Random-${pkgver}.tar.gz"
  "remove-guess.patch"
)
sha256sums=('a571b24181baaa76c96704e92acffc6934ff593e380dade274db4e43c140ad51'
  'dd022607d86e928f0142317502b400f0d988172060243e78a93020bd71ed2d26')

prepare() {
  cd "${srcdir}/Crypt-OpenSSL-Random-${pkgver}"
  patch -Np1 -i "${srcdir}/remove-guess.patch"
}

build() {
  cd "${srcdir}/Crypt-OpenSSL-Random-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 LIBS="-L/opt/zextras/common/lib -lssl -lcrypto" INC="-I/opt/zextras/common/include"
  make
}

package() {
  cd "${srcdir}/Crypt-OpenSSL-Random-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
