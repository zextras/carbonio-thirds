targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-config-inifiles"
pkgver="3.000003"
pkgrel="1"
pkgdesc="A module for reading .ini-style configuration files."
pkgdesclong=(
  "A module for reading .ini-style configuration files."
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends=(
  "carbonio-perl"
)
section="libs"
priority="important"
sources=(
  "https://cpan.metacpan.org/authors/id/S/SH/SHLOMIF/Config-IniFiles-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/Config-IniFiles-${pkgver}"
    perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5
  make
}

package() {
  cd "${srcdir}/Config-IniFiles-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
