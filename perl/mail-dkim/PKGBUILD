targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-mail-dkim"
pkgver="1.20200907"
pkgrel="2"
pkgdesc="Signs/verifies Internet mail with DKIM/DomainKey signatures"
pkgdesclong=(
  "Signs/verifies Internet mail with DKIM/DomainKey signatures"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends:apt=(
  "carbonio-perl-crypt-openssl-rsa"
  "carbonio-perl-mailtools"
  "carbonio-perl-net-dns"
  "carbonio-opendkim"
  "perl"
)
depends:yum=(
  "carbonio-perl-crypt-openssl-rsa"
  "carbonio-perl-mailtools"
  "carbonio-perl-net-dns"
  "carbonio-opendkim"
  "perl-core"
  "perl"
)
provides:yum=(
  "perl(Mail::AuthenticationResults::Header::AuthServID)"
  "perl(Mail::AuthenticationResults::Parser)"
)
section="libs"
priority="important"
sources=(
  "https://cpan.metacpan.org/authors/id/M/MB/MBRADSHAW/Mail-DKIM-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/Mail-DKIM-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 LIBS="-L/opt/zextras/common/lib -lssl -lcrypto" INC="-I/opt/zextras/common/include"
  make
}

package() {
  cd "${srcdir}/Mail-DKIM-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
