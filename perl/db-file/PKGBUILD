targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-db-file"
pkgver="1.856"
pkgrel="1"
pkgdesc="Perl5 access to Berkeley DB version 1.x"
pkgdesclong=(
  "Perl5 access to Berkeley DB version 1.x"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends=(
  "carbonio-bdb"
  "carbonio-perl-base"
)
section="libs"
priority="important"
sources=(
  "https://cpan.metacpan.org/authors/id/P/PM/PMQS/DB_File-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/DB_File-${pkgver}"
  export DB_FILE_LIB="/opt/zextras/common/lib"
  export DB_FILE_INCLUDE="/opt/zextras/common/include"  
    perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5
  LD_RUN_PATH="/opt/zextras/common/lib" PERL5LIB="/opt/zextras/common/lib/perl5" make
}

package() {
  cd "${srcdir}/DB_File-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
