pkgname="carbonio-perl-io-socket-ip"
pkgver="0.42"
pkgrel="1"
pkgdesc="Family-neutral IP socket supporting both IPv4 and IPv6"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends__apt=(
  "carbonio-perl-socket"
  "perl"
)
depends__yum=(
  "carbonio-perl-socket"
  "perl"
  "perl-core"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/P/PE/PEVANS/IO-Socket-IP-${pkgver}.tar.gz"
)
sha256sums=('f97a3846c50a4e0658ce1722ce7cc2acad9472e70478bfbe9c794fb1db6a6b13')

build() {
  cd "${srcdir}/IO-Socket-IP-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Build.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5
}

package() {
  cd "${srcdir}/IO-Socket-IP-${pkgver}"
  mkdir -p "${pkgdir}"/opt/zextras/common/lib
  cp -r lib "${pkgdir}"/opt/zextras/common/lib/perl5
}
