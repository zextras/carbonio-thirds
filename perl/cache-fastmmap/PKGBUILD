pkgname="carbonio-perl-cache-fastmmap"
pkgver="1.60" # renovate: datasource=cpan depName=Cache::FastMmap
pkgrel="2"
pkgdesc="Uses an mmap'ed file to act as a shared memory interprocess cache"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends__apt=(
  "perl"
)
depends__yum=(
  "perl-core"
  "perl"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/R/RO/ROBM/Cache-FastMmap-${pkgver}.tar.gz"
)
sha256sums=('e04b3a28d989edb8fb96eafacdc2b87f9eccb84f047eb2e27cb26aa7d08cc7b8')

build() {
  cd "${srcdir}/Cache-FastMmap-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/Perl5
  make
}

package() {
  cd "${srcdir}/Cache-FastMmap-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
