targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-zmq-libzmq3"
pkgver="1.19"
pkgrel="1"
pkgdesc="A libzmq 3.x wrapper for Perl"
pkgdesclong=(
  "A libzmq 3.x wrapper for Perl"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends=(
  "carbonio-zeromq"
  "carbonio-perl"
  "carbonio-perl-zmq-constants"
)
section="libs"
priority="important"
sources=(
  "https://cpan.metacpan.org/authors/id/D/DM/DMAKI/ZMQ-LibZMQ3-${pkgver}.tar.gz"
  "zmq-libzmq4-bug-122932-with-dot.patch"
)
hashsums=(
  "SKIP"
  "7ad0cab2b694192b99690f254c83e6bfedc849a02d2e16192d1e7580d4aebd87"
)

build() {
  cd "${srcdir}/ZMQ-LibZMQ3-${pkgver}"
  patch -Np1 -i ../zmq-libzmq4-bug-122932-with-dot.patch
  ZMQ_INCLUDES=/opt/zextras/common/include ZMQ_LIBS=/opt/zextras/common/lib ZMQ_H=/opt/zextras/common/include \
    perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 LIBS="-L/opt/zextras/common/lib -lzmq" INC="-I/opt/zextras/common/include -I."
}

package() {
  cd "${srcdir}/ZMQ-LibZMQ3-${pkgver}"
  # HACK: avoid tests requiring Test::SharedFork, Test::Fatal, Test::Require, Test::More::subtest
  rm -f t/104_ipc.t
  rm -f t/001_context.t t/002_socket.t t/003_message.t t/005_poll.t t/006_anyevent.t
  rm -f t/100_basic.t t/101_threads.t t/200_fork.t t/201_thread.t t/202_proxy.t
  rm -f t/rt64944.t t/rt74653.t
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
