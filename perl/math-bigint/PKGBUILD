targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-math-bigint"
pkgver="1.999818"
pkgrel="1"
pkgdesc="Arbitrary size integer/float math package"
pkgdesclong=(
  "Arbitrary size integer/float math package"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends=(
  "carbonio-perl"
)
makedepends:apt=(
  "libconfig-autoconf-perl"
  "libtest-simple-perl"
)
makedepends:yum=(
  "perl-Config-AutoConf"
  "perl-Test-Simple"
)
section="libs"
priority="important"
sources=(
  "https://cpan.metacpan.org/authors/id/P/PJ/PJACKLAM/Math-BigInt-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/Math-BigInt-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 LIBS="-L/opt/zextras/common/lib -lssl -lcrypto" INC="-I/opt/zextras/common/include"
  make
}

package() {
  cd "${srcdir}/Math-BigInt-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete  
}
