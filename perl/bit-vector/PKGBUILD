targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-bit-vector"
pkgver="7.4"
pkgrel="2"
pkgdesc="Efficient bit vector, set of integers and big int math library"
pkgdesclong=(
  "Efficient bit vector, set of integers and big int math library"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends:apt=(
  "carbonio-perl-carp-clan"
  "perl"
)
depends:yum=(
  "carbonio-perl-carp-clan"
  "perl-core"
  "perl"
)
section="libs"
priority="important"
sources=(
  "https://cpan.metacpan.org/authors/id/S/ST/STBEY/Bit-Vector-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/Bit-Vector-${pkgver}"
    perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5
  make
}

package() {
  cd "${srcdir}/Bit-Vector-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
