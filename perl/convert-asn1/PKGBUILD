pkgname="carbonio-perl-convert-asn1"
pkgver="0.34"
pkgrel="1"
pkgdesc="ASN.1 Encode/Decode library"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends__apt=(
  "carbonio-perl-math-bigint"
  "perl"
)
depends__yum=(
  "carbonio-perl-math-bigint"
  "perl-core"
  "perl"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/T/TI/TIMLEGGE/Convert-ASN1-${pkgver}.tar.gz"
)
sha256sums=('a628d7c9d390568fb76359975fa03f626ce57f10dc17980e8e3587d7713e4ee7')

build() {
  cd "${srcdir}/Convert-ASN1-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5
  make
}

package() {
  cd "${srcdir}/Convert-ASN1-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
