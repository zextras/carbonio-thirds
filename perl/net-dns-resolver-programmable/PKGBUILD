pkgname="carbonio-perl-net-dns-resolver-programmable"
pkgver="0.009" # renovate: datasource=cpan depName=Net::DNS::Resolver::Programmable
pkgrel="3"
pkgdesc="Programmable DNS resolver class for offline emulation of DNS"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends__apt=(
  "carbonio-perl-net-dns"
  "perl"
)
depends__yum=(
  "carbonio-perl-net-dns"
  "perl-core"
  "perl"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/B/BI/BIGPRESH/Net-DNS-Resolver-Programmable-${pkgver}.tar.gz"
)
sha256sums=('8080a2ab776629585911af1179bdb7c4dc2bebfd4b5efd77b11d1dac62454bf8')

build() {
  cd "${srcdir}/Net-DNS-Resolver-Programmable-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 LIBS="-L/opt/zextras/common/lib -lssl -lcrypto" INC="-I/opt/zextras/common/include"
  make
}

package() {
  cd "${srcdir}/Net-DNS-Resolver-Programmable-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
