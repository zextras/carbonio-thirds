targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-convert-tnef"
pkgver="0.18"
pkgrel="2"
pkgdesc="Perl module to read TNEF files"
pkgdesclong=(
  "Perl module to read TNEF files"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends:apt=(
  "carbonio-perl-io-stringy"
  "carbonio-perl-mime-tools"
  "perl"
)
depends:yum=(
  "carbonio-perl-io-stringy"
  "carbonio-perl-mime-tools"
  "perl-core"
  "perl"
)
section="libs"
priority="important"
sources=(
  "https://cpan.metacpan.org/authors/id/D/DO/DOUGW/Convert-TNEF-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/Convert-TNEF-${pkgver}"
    perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 
  make
}

package() {
  cd "${srcdir}/Convert-TNEF-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
