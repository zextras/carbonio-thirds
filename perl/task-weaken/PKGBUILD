targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-task-weaken"
pkgver="1.06"
pkgrel="1"
pkgdesc="Ensure that a platform has weaken support"
pkgdesclong=(
  "Ensure that a platform has weaken support"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends=(
  "carbonio-perl-base"
)
section="libs"
priority="important"
sources=(
  "https://cpan.metacpan.org/authors/id/E/ET/ETHER/Task-Weaken-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/Task-Weaken-${pkgver}"
    perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 
  make
}

package() {
  cd "${srcdir}/Task-Weaken-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
