targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-mail-spf"
pkgver="2.9.0"
pkgrel="2"
pkgdesc="An object-oriented implementation of Sender Policy Framework"
pkgdesclong=(
  "An object-oriented implementation of Sender Policy Framework"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends:apt=(
  "carbonio-perl-error"
  "carbonio-perl-net-dns"
  "carbonio-perl-net-dns-resolver-programmable"
  "carbonio-perl-netaddr-ip"
  "carbonio-perl-uri"
  "perl"
)
depends:yum=(
  "carbonio-perl-error"
  "carbonio-perl-net-dns"
  "carbonio-perl-net-dns-resolver-programmable"
  "carbonio-perl-netaddr-ip"
  "carbonio-perl-uri"
  "perl-core"
  "perl"
)
section="libs"
priority="important"
sources=(
  "https://cpan.metacpan.org/authors/id/J/JM/JMEHNLE/mail-spf/Mail-SPF-v${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/Mail-SPF-v${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 LIBS="-L/opt/zextras/common/lib -lssl -lcrypto" INC="-I/opt/zextras/common/include"
  make
}

package() {
  cd "${srcdir}/Mail-SPF-v${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
