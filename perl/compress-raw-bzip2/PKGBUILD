# renovate: datasource=cpan depName=Compress::Raw::Bzip2
pkgname="carbonio-perl-compress-raw-bzip2"
pkgver="2.217"
pkgrel="1"
pkgdesc="Low-Level Interface to bzip2 compression library"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
license=('Artistic-1.0-Perl OR GPL-1.0-or-later')
depends__apt=(
  "perl"
)
depends__yum=(
  "perl-core"
  "perl"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/P/PM/PMQS/Compress-Raw-Bzip2-${pkgver}.tar.gz"
)
sha256sums=('aa80f52473b8ca3368e8f83496fac1b2a25d27723506b94c4ea6c861fce961f8')

build() {
  cd "${srcdir}/Compress-Raw-Bzip2-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5
  make
}

package() {
  cd "${srcdir}/Compress-Raw-Bzip2-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
