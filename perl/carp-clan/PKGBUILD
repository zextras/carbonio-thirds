pkgname="carbonio-perl-carp-clan"
pkgver="6.08"
pkgrel="2"
pkgdesc="Report errors from perspective of caller of a clan of modules"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
depends__apt=(
  "perl"
)
depends__yum=(
  "perl-core"
  "perl"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/E/ET/ETHER/Carp-Clan-${pkgver}.tar.gz"
)
sha256sums=('c75f92e34422cc5a65ab05d155842b701452434e9aefb649d6e2289c47ef6708')

build() {
  cd "${srcdir}/Carp-Clan-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5
  make
}

package() {
  cd "${srcdir}/Carp-Clan-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
