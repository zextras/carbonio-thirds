targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-http-message"
pkgver="6.32"
pkgrel="2"
pkgdesc="HTTP style message"
pkgdesclong=(
  "HTTP style message"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends:apt=(
  "carbonio-perl-encode-locale"
  "carbonio-perl-http-date"
  "carbonio-perl-io-compress"
  "carbonio-perl-io-html"
  "carbonio-perl-lwp-mediatypes"
  "carbonio-perl-uri"
  "perl"
)
depends:yum=(
  "carbonio-perl-encode-locale"
  "carbonio-perl-http-date"
  "carbonio-perl-io-compress"
  "carbonio-perl-io-html"
  "carbonio-perl-lwp-mediatypes"
  "carbonio-perl-uri"
  "perl-core"
  "perl"
)
section="libs"
priority="important"
sources=(
  "https://cpan.metacpan.org/authors/id/O/OA/OALDERS/HTTP-Message-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/HTTP-Message-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 LIBS="-L/opt/zextras/common/lib -lssl -lcrypto" INC="-I/opt/zextras/common/include"
  make
}

package() {
  cd "${srcdir}/HTTP-Message-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
