pkgname="carbonio-perl-cryptx"
pkgver="0.080"
pkgrel="1"
pkgdesc="Cryptographic toolkit"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends__apt=(
  "perl"
)
depends__yum=(
  "perl-core"
  "perl"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/M/MI/MIK/CryptX-$pkgver.tar.gz"
)

sha256sums=('b457b792194a6c9c13f06fe0a0b5ea158965c3282f385ca93e1f00a2b33e7e89')

build() {
  cd "${srcdir}/CryptX-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 LIBS="-L/opt/zextras/common/lib" INC="-I/opt/zextras/common/include -Isrc/ltm -Isrc/ltc/headers"
  make
}

package() {
  cd "${srcdir}/CryptX-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
