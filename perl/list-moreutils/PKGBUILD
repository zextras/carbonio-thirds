pkgname="carbonio-perl-list-moreutils"
pkgver="0.430" # renovate: datasource=cpan depName=List::MoreUtils
pkgrel="3"
pkgdesc="Provide the stuff missing in List::Util"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends__apt=(
  "carbonio-perl-exporter-tiny"
  "perl"
)
depends__yum=(
  "carbonio-perl-exporter-tiny"
  "perl-core"
  "perl"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/R/RE/REHSACK/List-MoreUtils-${pkgver}.tar.gz"
)
sha256sums=('63b1f7842cd42d9b538d1e34e0330de5ff1559e4c2737342506418276f646527')

build() {
  cd "${srcdir}/List-MoreUtils-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 LIBS="-L/opt/zextras/common/lib -lssl -lcrypto" INC="-I/opt/zextras/common/include"
  make
}

package() {
  cd "${srcdir}/List-MoreUtils-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
