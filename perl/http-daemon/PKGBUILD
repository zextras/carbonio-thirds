pkgname="carbonio-perl-http-daemon"
pkgver="6.12"
pkgrel="2"
pkgdesc="A simple http server class"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends__apt=(
  "carbonio-perl-http-date"
  "carbonio-perl-http-message"
  "carbonio-perl-io-socket-ip"
  "carbonio-perl-lwp-mediatypes"
  "perl"
)
depends__yum=(
  "carbonio-perl-http-date"
  "carbonio-perl-http-message"
  "carbonio-perl-io-socket-ip"
  "carbonio-perl-lwp-mediatypes"
  "perl-core"
  "perl"
)
makedepends__apt=(
  "libmodule-build-tiny-perl"
)
makedepends__yum=(
  "perl-Module-Build-Tiny"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/O/OA/OALDERS/HTTP-Daemon-${pkgver}.tar.gz"
)
sha256sums=('df47bed10c38670c780fd0116867d5fd4693604acde31ba63380dce04c4e1fa6')

build() {
  cd "${srcdir}/HTTP-Daemon-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 LIBS="-L/opt/zextras/common/lib -lssl -lcrypto" INC="-I/opt/zextras/common/include"
  make
}

package() {
  cd "${srcdir}/HTTP-Daemon-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
