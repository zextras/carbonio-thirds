targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-file-tail"
pkgver="1.3"
pkgrel="1"
pkgdesc="Perl extension for reading from continously updated files"
pkgdesclong=(
  "Perl extension for reading from continously updated files"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends=(
  "carbonio-perl"
)
section="libs"
priority="important"
sources=(
  "https://cpan.metacpan.org/authors/id/M/MG/MGRABNAR/File-Tail-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/File-Tail-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5
  make
}

package() {
  cd "${srcdir}/File-Tail-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
