targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-xml-simple"
pkgver="2.25"
pkgrel="1"
pkgdesc="An API for simple XML files"
pkgdesclong=(
  "An API for simple XML files"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends:apt=(
  "libexpat1"
  "carbonio-perl"
  "carbonio-perl-dbi"
)
depends:yum=(
  "expat"
  "carbonio-perl"
  "carbonio-perl-dbi"
)
makedepends:apt=(
  "libexpat1-dev"
)
makedepends:yum=(
  "expat-devel"
)
section="libs"
priority="important"
sources=(
  "https://cpan.metacpan.org/authors/id/G/GR/GRANTM/XML-Simple-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/XML-Simple-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 LIBS="-L/opt/zextras/common/lib -lssl -lcrypto" INC="-I/opt/zextras/common/include"
  make
}

package() {
  cd "${srcdir}/XML-Simple-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete  
}
