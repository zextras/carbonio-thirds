pkgname="carbonio-perl-data-uuid"
pkgver="1.227" # renovate: datasource=cpan depName=Data::UUID
pkgrel="1"
pkgdesc="Globally/Universally Unique Identifiers (GUIDs/UUIDs)"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
license=("Artistic-1.0-Perl OR GPL-1.0-or-later")
depends__apt=(
  "perl"
)
depends__yum=(
  "perl-core"
  "perl"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/G/GT/GTERMARS/Data-UUID-${pkgver}.tar.gz"
)
sha256sums=('95bda7276265f57bc48ffdeddec5ef28cd6f765e3a183757fa5f09f0ce6b98ac')

build() {
  cd "${srcdir}/Data-UUID-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5
  make
}

package() {
  cd "${srcdir}/Data-UUID-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
