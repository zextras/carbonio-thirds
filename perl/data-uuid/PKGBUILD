targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-data-uuid"
pkgver="1.226"
pkgrel="1"
pkgdesc="Globally/Universally Unique Identifiers (GUIDs/UUIDs)"
pkgdesclong=(
  "Globally/Universally Unique Identifiers (GUIDs/UUIDs)"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends=(
  "carbonio-perl"
)
section="libs"
priority="important"
sources=(
  "https://cpan.metacpan.org/authors/id/R/RJ/RJBS/Data-UUID-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/Data-UUID-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 
  make
}

package() {
  cd "${srcdir}/Data-UUID-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
