pkgname="carbonio-perl-xml-sax"
pkgver="1.02" # renovate: datasource=cpan depName=XML::SAX
pkgrel="3"
pkgdesc="Simple API for XML"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
license=("Artistic-1.0-Perl OR GPL-1.0-or-later")
depends__apt=(
  "carbonio-perl-xml-namespacesupport"
  "carbonio-perl-xml-sax-base"
  "perl"
)
depends__yum=(
  "carbonio-perl-xml-namespacesupport"
  "carbonio-perl-xml-sax-base"
  "perl-core"
  "perl"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/G/GR/GRANTM/XML-SAX-${pkgver}.tar.gz"
)
sha256sums=('4506c387043aa6a77b455f00f57409f3720aa7e553495ab2535263b4ed1ea12a')

build() {
  cd "${srcdir}/XML-SAX-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5
  make
}

package() {
  cd "${srcdir}/XML-SAX-${pkgver}"
  PERL5LIB=/opt/zextras/common/lib/perl5:${pkgdir}/opt/zextras/common/lib/perl5 \
    make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
