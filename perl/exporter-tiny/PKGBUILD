pkgname="carbonio-perl-exporter-tiny"
pkgver="1.006003" # renovate: datasource=cpan depName=Exporter::Tiny
pkgrel="1"
pkgdesc="An exporter with the features of Sub::Exporter but only core dependencies"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends__apt=(
  "perl"
)
depends__yum=(
  "perl-core"
  "perl"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/T/TO/TOBYINK/Exporter-Tiny-${pkgver}.tar.gz"
)
sha256sums=('6499f09a6432cf87b133fb9580a8a9a9a6c566821346b1fdee95f7b64c0317b1')

build() {
  cd "${srcdir}/Exporter-Tiny-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 LIBS="-L/opt/zextras/common/lib -lssl -lcrypto" INC="-I/opt/zextras/common/include"
  make
}

package() {
  cd "${srcdir}/Exporter-Tiny-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
