pkgname="carbonio-perl-geography-countries"
pkgver="2009041301" # renovate: datasource=cpan depName=Geography::Countries
pkgrel="3"
pkgdesc="2-letter, 3-letter, and numerical codes for countries"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends__apt=(
  "perl"
)
depends__yum=(
  "perl-core"
  "perl"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/A/AB/ABIGAIL/Geography-Countries-${pkgver}.tar.gz"
)
sha256sums=('48c42e40e8281ba7c981743a854c48e6def2d51eb0925ea6c96e25c74497f20f')

build() {
  cd "${srcdir}/Geography-Countries-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 LIBS="-L/opt/zextras/common/lib -lssl -lcrypto" INC="-I/opt/zextras/common/include"
  make
}

package() {
  cd "${srcdir}/Geography-Countries-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
