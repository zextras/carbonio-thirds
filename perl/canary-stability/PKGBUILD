pkgname="carbonio-perl-canary-stability"
pkgver="2013" # renovate: datasource=cpan depName=Canary::Stability
pkgrel="3"
pkgdesc="Canary to check perl compatibility for schmorp's modules"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
license=("Artistic-1.0-Perl OR GPL-1.0-or-later")
depends__apt=(
  "perl"
)
depends__yum=(
  "perl-core"
  "perl"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/M/ML/MLEHMANN/Canary-Stability-${pkgver}.tar.gz"
)
sha256sums=('a5c91c62cf95fcb868f60eab5c832908f6905221013fea2bce3ff57046d7b6ea')

build() {
  cd "${srcdir}/Canary-Stability-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5
  make
}

package() {
  cd "${srcdir}/Canary-Stability-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
