pkgname="carbonio-perl-net-cidr"
pkgver="0.27" # renovate: datasource=cpan depName=Net::CIDR
pkgrel="3"
pkgdesc="Manipulate IPv4/IPv6 netblocks in CIDR notation"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends__apt=(
  "perl"
)
depends__yum=(
  "perl-core"
  "perl"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/M/MR/MRSAM/Net-CIDR-${pkgver}.tar.gz"
)
sha256sums=('30f303c0735948da33370decc7e87cfa68bc430aa44b81d18f8d823b6d1abfbf')

build() {
  cd "${srcdir}/Net-CIDR-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3
  make
}

package() {
  cd "${srcdir}/Net-CIDR-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
