pkgname="carbonio-perl-dbi"
pkgver="1.644" # renovate: datasource=cpan depName=DBI
pkgrel="2"
pkgdesc="Database independent interface for Perl"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends__apt=(
  "carbonio-perl-socket"
  "perl"
)
depends__yum=(
  "carbonio-perl-socket"
  "perl-core"
  "perl"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/H/HM/HMBRAND/DBI-${pkgver}.tar.gz"
)
sha256sums=('2297b99de09e67086640b590699e0e982fb469da63a93fe28dc14782db7a53c8')

build() {
  cd "${srcdir}/DBI-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 LIBS="-L/opt/zextras/common/lib" INC="-I/opt/zextras/common/include"
  LD_RUN_PATH=/opt/zextras/common/lib make
}

package() {
  cd "${srcdir}/DBI-${pkgver}"
  make install DESTDIR="${pkgdir}"
  cp -r blib/arch/auto/DBI \
    "${pkgdir}"/opt/zextras/common/include
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
