pkgname="carbonio-perl-berkeleydb"
pkgver="0.64"
pkgrel="2"
pkgdesc="Perl5 Module Supporting LDAP API"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://zextras.com"
depends__apt=(
  "carbonio-bdb"
  "perl"
)
depends__yum=(
  "carbonio-bdb"
  "perl"
  "perl-core"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/P/PM/PMQS/BerkeleyDB-${pkgver}.tar.gz"
)
sha256sums=('535c85e8549c1ac43a20160fdc02f0a400614156fd76157fff28aa33fda3744b')

build() {
  cd "${srcdir}/BerkeleyDB-${pkgver}"
  export BERKELEYDB_LIB="/opt/zextras/common/lib"
  export BERKELEYDB_INCLUDE="/opt/zextras/common/include"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5
  LD_RUN_PATH=/opt/zextras/common/lib make
}

package() {
  cd "${srcdir}/BerkeleyDB-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
