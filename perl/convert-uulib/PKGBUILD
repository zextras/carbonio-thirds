targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-convert-uulib"
pkgver="1.8"
pkgrel="1"
pkgdesc="Decode uu/xx/b64/mime/yenc/etc-encoded data from a massive number of files"
pkgdesclong=(
  "Decode uu/xx/b64/mime/yenc/etc-encoded data from a massive number of files"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends=(
  "carbonio-perl"
  "carbonio-perl-canary-stability"
)
section="libs"
priority="important"
sources=(
  "https://cpan.metacpan.org/authors/id/M/ML/MLEHMANN/Convert-UUlib-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/Convert-UUlib-${pkgver}"
    perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5
  make
}

package() {
  cd "${srcdir}/Convert-UUlib-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
