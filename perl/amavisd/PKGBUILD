pkgname="carbonio-amavisd"
pkgver="2.13.1"
pkgrel="1"
pkgdesc="High-performance interface between mailer (MTA) and content checkers"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends=(
  "carbonio-perl-archive-zip"
  "carbonio-perl-berkeleydb"
  "carbonio-perl-convert-tnef"
  "carbonio-perl-convert-uulib"
  "carbonio-perl-digest-sha1"
  "carbonio-perl-file-libmagic"
  "carbonio-perl-http-message"
  "carbonio-perl-io-socket-ip"
  "carbonio-perl-io-stringy"
  "carbonio-perl-ip-country"
  "carbonio-perl-libwww"
  "carbonio-perl-lwp-protocol-https"
  "carbonio-perl-mail-dkim"
  "carbonio-perl-mailtools"
  "carbonio-perl-mime-tools"
  "carbonio-perl-net-libidn2"
  "carbonio-perl-net-server"
  "carbonio-perl-net-ssleay"
  "carbonio-perl-unix-syslog"
)
section="utils"
priority="optional"
source=(
  "https://gitlab.com/amavis/amavis/-/archive/v${pkgver}/amavis-v${pkgver}.tar.bz2"
  "carbonio-mailthreat.service"
  "socket_and_misc.patch"
)
sha256sums=('cd08d5b17e393873b79e72a843a672b9207fc4b577b9b8a07769d79bff0a845b'
  '9df73af76421aa7a5459e3ef9d1c3419086d07f1f3faf8d834c084912fbc8d67'
  'b7f662752874a9d9035fe231adf809591b42b401b2a9d058ecb5ffb4b4cb2737')

package() {
  cd "${srcdir}/amavis-v${pkgver}"

  patch -Np1 -i "${srcdir}/socket_and_misc.patch"

  install -D -p -m755 bin/amavisd \
    "${pkgdir}/opt/zextras/common/sbin/amavisd"

  install -p -m755 bin/amavisd-{agent,nanny,release,signer,status,submit} \
    "${pkgdir}/opt/zextras/common/sbin"

  install -p -m755 bin/amavis-{mc,services} \
    "${pkgdir}/opt/zextras/common/sbin"

  mkdir -p "${pkgdir}/opt/zextras/common/lib/"
  cp -pr lib "${pkgdir}/opt/zextras/common/lib/perl5"

  # systemd units
  install -D -m 644 "${srcdir}/carbonio-mailthreat.service" \
    "${pkgdir}/lib/systemd/system/carbonio-mailthreat.service"
}

postinst__apt() {
  if [ "$1" = "configure" ]; then
    # creating zextras group if it isn't already there
    if ! getent group zextras >/dev/null; then
      addgroup --system --force-badname --quiet zextras
    fi
    # creating zextras user if it isn't already there
    if ! getent passwd zextras >/dev/null; then
      adduser --system --force-badname --quiet \
        --ingroup zextras \
        --home /opt/zextras \
        --shell /bin/bash \
        zextras
      usermod -c "zextras user" zextras
    fi
  fi

  if [ ! -d /opt/zextras/data/amavisd/quarantine ]; then
    mkdir -p /opt/zextras/data/amavisd/quarantine
  fi
  if [ ! -d /opt/zextras/data/amavisd/tmp ]; then
    mkdir -p /opt/zextras/data/amavisd/tmp
  else
    find -p /opt/zextras/data/amavisd/tmp -maxdepth 1 -type d -name 'amavis-*' -exec rm -rf {} \; >/dev/null 2>&1
  fi
  if [ ! -d /opt/zextras/data/amavisd/var ]; then
    mkdir -p /opt/zextras/data/amavisd/var
  fi

  chown -R zextras:zextras /opt/zextras/data/amavisd
}

postinst__yum() {
  # creating zextras group if it isn't already there
  if ! getent group zextras >/dev/null; then
    groupadd --system zextras >/dev/null
  fi
  # creating zextras user if it isn't already there
  if ! getent passwd zextras >/dev/null; then
    useradd --system \
      -g zextras \
      -d /opt/zextras \
      --shell /bin/bash \
      zextras >/dev/null
    usermod -c "zextras user" zextras
  fi

  if [ ! -d /opt/zextras/data/amavisd/quarantine ]; then
    mkdir -p /opt/zextras/data/amavisd/quarantine
  fi
  if [ ! -d /opt/zextras/data/amavisd/tmp ]; then
    mkdir -p /opt/zextras/data/amavisd/tmp
  else
    find -p /opt/zextras/data/amavisd/tmp -maxdepth 1 -type d -name 'amavis-*' -exec rm -rf {} \; >/dev/null 2>&1
  fi
  if [ ! -d /opt/zextras/data/amavisd/var ]; then
    mkdir -p /opt/zextras/data/amavisd/var
  fi

  chown -R zextras:zextras /opt/zextras/data/amavisd
}
