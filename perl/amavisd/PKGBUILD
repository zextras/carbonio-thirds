package() {
  cd "${srcdir}/amavis-v${pkgver}"

  patch -Np1 -i "${srcdir}/socket_and_misc.patch"

  install -D -p -m755 bin/amavisd \
    "${pkgdir}/opt/zextras/common/sbin/amavisd"

  install -p -m755 bin/amavisd-{agent,nanny,release,signer,status,submit} \
    "${pkgdir}/opt/zextras/common/sbin"

  install -p -m755 bin/amavis-{mc,services} \
    "${pkgdir}/opt/zextras/common/sbin"

  mkdir -p "${pkgdir}/opt/zextras/common/lib/"
  cp -pr lib "${pkgdir}/opt/zextras/common/lib/perl5"

  # systemd units
  install -Dm644 "${srcdir}/carbonio-mailthreat.service" \
    "${pkgdir}/usr/lib/systemd/system/carbonio-mailthreat.service"
  install -Dm644 "${srcdir}/carbonio-mailthreat-update.service" \
    "${pkgdir}/usr/lib/systemd/system/carbonio-mailthreat-update.service"
  install -Dm644 "${srcdir}/carbonio-mailthreat-update.timer" \
    "${pkgdir}/usr/lib/systemd/system/carbonio-mailthreat-update.timer"
}

postinst__apt() {
  if [ "$1" = "configure" ]; then
    # creating zextras group if it isn't already there
    if ! getent group zextras >/dev/null; then
      addgroup --system --force-badname --quiet zextras
    fi
    # creating zextras user if it isn't already there
    if ! getent passwd zextras >/dev/null; then
      adduser --system --force-badname --quiet \
        --ingroup zextras \
        --home /opt/zextras \
        --shell /bin/bash \
        zextras
      usermod -c "zextras user" zextras
    fi
  fi

  if [ ! -d /opt/zextras/data/amavisd/quarantine ]; then
    mkdir -p /opt/zextras/data/amavisd/quarantine
  fi
  if [ ! -d /opt/zextras/data/amavisd/tmp ]; then
    mkdir -p /opt/zextras/data/amavisd/tmp
  else
    find -p /opt/zextras/data/amavisd/tmp -maxdepth 1 -type d -name 'amavis-*' -exec rm -rf {} \; >/dev/null 2>&1
  fi
  if [ ! -d /opt/zextras/data/amavisd/var ]; then
    mkdir -p /opt/zextras/data/amavisd/var
  fi

  chown -R zextras:zextras /opt/zextras/data/amavisd
}

postinst__yum() {
  # creating zextras group if it isn't already there
  if ! getent group zextras >/dev/null; then
    groupadd --system zextras >/dev/null
  fi
  # creating zextras user if it isn't already there
  if ! getent passwd zextras >/dev/null; then
    useradd --system \
      -g zextras \
      -d /opt/zextras \
      --shell /bin/bash \
      zextras >/dev/null
    usermod -c "zextras user" zextras
  fi

  if [ ! -d /opt/zextras/data/amavisd/quarantine ]; then
    mkdir -p /opt/zextras/data/amavisd/quarantine
  fi
  if [ ! -d /opt/zextras/data/amavisd/tmp ]; then
    mkdir -p /opt/zextras/data/amavisd/tmp
  else
    find -p /opt/zextras/data/amavisd/tmp -maxdepth 1 -type d -name 'amavis-*' -exec rm -rf {} \; >/dev/null 2>&1
  fi
  if [ ! -d /opt/zextras/data/amavisd/var ]; then
    mkdir -p /opt/zextras/data/amavisd/var
  fi

  chown -R zextras:zextras /opt/zextras/data/amavisd
}
