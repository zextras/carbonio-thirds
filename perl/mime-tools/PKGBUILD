pkgname="carbonio-perl-mime-tools"
pkgver="5.510" # renovate: datasource=cpan depName=MIME::tools
pkgrel="2"
pkgdesc="Modules for parsing (and creating!) MIME entities"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends__apt=(
  "carbonio-perl-convert-binhex"
  "carbonio-perl-io-stringy"
  "carbonio-perl-mailtools"
  "perl"
)
depends__yum=(
  "carbonio-perl-convert-binhex"
  "carbonio-perl-io-stringy"
  "carbonio-perl-mailtools"
  "perl-core"
  "perl"
)
section="libs"
priority="important"
source=(
  "https://cpan.metacpan.org/authors/id/D/DS/DSKOLL/MIME-tools-${pkgver}.tar.gz"
)
sha256sums=('1bcfb4ece6ab4a6850ea1c8f3aa7405e233f50885dbdcd7bae546d52ec953cfe')

build() {
  cd "${srcdir}/MIME-tools-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 LIBS="-L/opt/zextras/common/lib -lssl -lcrypto" INC="-I/opt/zextras/common/include"
  make
}

package() {
  cd "${srcdir}/MIME-tools-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
