targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-io-socket-inet6"
pkgver="1.45"
pkgrel="1"
pkgdesc="Object interface for AF_INET domain sockets"
pkgdesclong=(
  "Object interface for AF_INET domain sockets"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends=(
  "carbonio-perl-base"
)
section="libs"
priority="important"
sources=(
"https://cpan.metacpan.org/authors/id/T/TO/TODDR/IO-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/IO-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5
  make
}

package() {
  cd "${srcdir}/IO-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete  
}
