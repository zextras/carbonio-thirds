targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-io-socket-inet6"
pkgver="2.72"
pkgrel="2"
pkgdesc="Object interface for AF_INET|AF_INET6 domain sockets"
pkgdesclong=(
  "Object interface for AF_INET|AF_INET6 domain sockets"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends:apt=(
  "perl"
)
depends:yum=(
  "perl-core"
  "perl"
)
section="libs"
priority="important"
sources=(
  "https://cpan.metacpan.org/authors/id/S/SH/SHLOMIF/IO-Socket-INET6-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/IO-Socket-INET6-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL \
    INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 \
    INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5
  make
}

package() {
  cd "${srcdir}/IO-Socket-INET6-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete
}
