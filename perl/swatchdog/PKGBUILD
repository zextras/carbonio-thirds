targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-perl-swatchdog"
pkgver="3.2.4"
pkgrel="2"
pkgdesc="The active log file monitoring tool"
pkgdesclong=(
  "The active log file monitoring tool"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends=(
  "carbonio-perl-date-calc"
  "carbonio-perl-date-manip"
  "carbonio-perl-file-tail"
  "carbonio-perl-timedate"
)
section="libs"
priority="important"
sources=(
  "http://downloads.sourceforge.net/project/swatch/swatchdog/swatchdog-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/swatchdog-${pkgver}"
  perl -I /opt/zextras/common/lib/perl5 Makefile.PL INSTALL_BASE=/opt/zextras/common \
    INSTALLSITEMAN1DIR=/opt/zextras/common/share/man/man1 INSTALLSITEMAN3DIR=/opt/zextras/common/share/man/man3 \
    LIB=/opt/zextras/common/lib/perl5 LIBS="-L/opt/zextras/common/lib -lssl -lcrypto" INC="-I/opt/zextras/common/include"
  PERL5LIB=/opt/zextras/common/lib make
}

package() {
  cd "${srcdir}/swatchdog-${pkgver}"
  make install DESTDIR="${pkgdir}"
  find "${pkgdir}" -name '.packlist' -delete
  find "${pkgdir}" -name '*.pod' -delete  
}
