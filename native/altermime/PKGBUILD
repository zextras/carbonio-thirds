pkgname="carbonio-altermime"
pkgver="0.3.10"
pkgrel="6"
pkgdesc="MIME encoded email pack alteration tool"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
license=('BSD-2-Clause')
section="utils"
priority="optional"
source=(
  "https://pldaniels.com/altermime/altermime-${pkgver}.tar.gz"
  "altermime-0.3.10-fprintf-compiler-error.patch"
  "altermime-0.3.10-cflags.patch"
  "altermime-disclaimers.patch"
  "${pkgname}-config.service"
)
sha256sums=(
  '8334da6b55d4a05dfe1492389dfe1f289953053a21773849b060d7c856ddc36e'
  '2d9dadc9ccf529f1a778a3f21b315c96aa1e9c81dfacc9e4e705725682e581a0'
  '21b1db5e5851453cd95cd8a69b9cd53cb5767a0e1408f232cb4a156e79731762'
  '406e0481a01ffe1491e3b937626e92022013fe815194d88b143c7361abfc3fe0'
  '7c722e405a77f4c66033024198a343816ba1188f30845d7c177c4895395c4ca6'
)

_package() {
  cd "${srcdir}/altermime-${pkgver}"
  install -d "${pkgdir}/opt/zextras/common/bin"
  install -m 755 altermime "${pkgdir}/opt/zextras/common/bin/"
}

_package_systemd() {
  # systemd unit
  install -Dm644 "${srcdir}/${pkgname}-config.service" \
    "${pkgdir}/usr/lib/systemd/system/${pkgname}-config.service"
}

build() {
  cd "${srcdir}/altermime-${pkgver}"
  patch -Np0 -i "${srcdir}/altermime-0.3.10-fprintf-compiler-error.patch"
  patch -Np0 -i "${srcdir}/altermime-0.3.10-cflags.patch"
  patch -Np1 -i "${srcdir}/altermime-disclaimers.patch"

  export LDFLAGS="-Wl,-rpath,/opt/zextras/common/lib"
  make
}

package() {
  _package
  _package_systemd
}

package__rocky_8() {
  _package
}

package__rocky_9() {
  _package
  _package_systemd
}

package__ubuntu_jammy() {
  _package
}

package__ubuntu_noble() {
  _package
  _package_systemd
}
