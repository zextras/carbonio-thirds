targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-curl"
pkgver="7.78.0"
pkgrel="1"
pkgdesc="An URL retrieval utility and library"
pkgdesclong=(
  "An URL retrieval utility and library"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends:apt=(
  "carbonio-krb5"
  "carbonio-openssl"
  "zlib1g"
)
makedepends:apt=(
  "zlib1g-dev"
)
depends:yum=(
  "carbonio-krb5"
  "carbonio-openssl"
  "zlib"
)
makedepends:yum=(
  "zlib-devel"
)
section="utils"
priority="optional"
sources=(
  "https://curl.haxx.se/download/curl-${pkgver}.tar.gz"
)
hashsums=(
  "3d74343e06dd3d699f4c883758775554956f7f27de470b71f4af0d7f56ff5e4d7c534ab958c8926fae69cd0ded90c173ac3d5a6ad5518d88c2f39f31f8bba2f3"
)

build() {
  cd "${srcdir}/curl-${pkgver}"
  export LDFLAGS="-Wl,-rpath,/opt/zextras/common/lib"
  export CFLAGS="-O2"
  export CPPFLAGS="-I/opt/zextras/common/include"

  ./configure --prefix=/opt/zextras/common \
    --disable-ldap --disable-ldaps \
    --with-gssapi=/opt/zextras/common \
    --with-ssl=/opt/zextras/common \
    --without-gnutls \
    --with-ca-bundle=/opt/zextras/common/share/curl/ca-bundle.crt \
    --enable-ipv6 \
    --with-zlib \
    --without-libidn \
    --disable-static
  make -j16
}

package() {
  cd "${srcdir}/curl-${pkgver}"
  make DESTDIR="${pkgdir}" install
  make ca-bundle
  mkdir -p "${pkgdir}/opt/zextras/common/share/curl"
  cp -f lib/ca-bundle.crt "${pkgdir}/opt/zextras/common/share/curl/ca-bundle.crt"
  rm -rf "${pkgdir}"/opt/zextras/common/lib/*.la
}
