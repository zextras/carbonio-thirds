pkgname="carbonio-curl"
pkgver="8.9.0"
pkgrel="1"
pkgdesc="An URL retrieval utility and library"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends__apt=(
  "carbonio-krb5"
  "carbonio-openssl"
  "libbrotli1"
  "zlib1g"
)
makedepends__apt=(
  "libbrotli-dev"
  "zlib1g-dev"
)
depends__yum=(
  "brotli"
  "carbonio-krb5"
  "carbonio-openssl"
  "zlib"
)
makedepends__yum=(
  "brotli-devel"
  "zlib-devel"
)
section="utils"
priority="optional"
source=(
  "https://curl.haxx.se/download/curl-${pkgver}.tar.gz"
)
sha256sums=('14d931fa98a329310dca7b190d047c3d4987674b1f466481f5490e4e12067ba4')

build() {
  export LDFLAGS="-Wl,-rpath,/opt/zextras/common/lib"
  export CPPFLAGS="-I/opt/zextras/common/include"
  export PKG_CONFIG_PATH="/opt/zextras/common/lib/pkgconfig"

  cd "${srcdir}/curl-${pkgver}"

  ./configure \
    --prefix=/opt/zextras/common \
    --disable-ldap \
    --disable-ldaps \
    --disable-static \
    --enable-ipv6 \
    --with-ca-bundle=/opt/zextras/common/share/curl/ca-bundle.crt \
    --with-gssapi=/opt/zextras/common \
    --with-openssl=/opt/zextras/common \
    --with-zlib \
    --without-gnutls \
    --without-libidn2
  make -j16
}

package() {
  cd "${srcdir}/curl-${pkgver}"
  make DESTDIR="${pkgdir}" install
  make ca-bundle
  mkdir -p "${pkgdir}/opt/zextras/common/share/curl"
  cp -f lib/ca-bundle.crt "${pkgdir}/opt/zextras/common/share/curl/ca-bundle.crt"
  rm -rf "${pkgdir}"/opt/zextras/common/lib/*.la
}
