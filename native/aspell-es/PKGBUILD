targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-aspell-es"
pkgver="1.11"
pkgrel="1"
pkgdesc="Spanish dictionary for aspell"
pkgdesclong=(
  "Spanish dictionary for aspell"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends=(
  "carbonio-aspell"
  "carbonio-spell-base"
)
section="utils"
priority="optional"
sources=(
  "https://ftp.gnu.org/gnu/aspell/dict/es/aspell6-es-${pkgver}-2.tar.bz2"
)
hashsums=(
  "ad367fa1e7069c72eb7ae37e4d39c30a44d32a6aa73cedccbd0d06a69018afcc"
)

build() {
  cd "${srcdir}/aspell6-es-${pkgver}-2"
  export LDFLAGS="-Wl,-rpath,/opt/zextras/common/lib"
  export CFLAGS="-O2"

  ./configure \
    --vars ASPELL=/opt/zextras/common/bin/aspell \
    PREZIP=/opt/zextras/common/bin/prezip-bin
  make
}

package() {
  cd "${srcdir}/aspell6-es-${pkgver}-2"
  make DESTDIR="${pkgdir}" install
}