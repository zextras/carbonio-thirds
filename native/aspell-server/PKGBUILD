targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-aspell-server"
pkgver="9.0.0p14"
pkgrel="1"
pkgdesc="A dictionary for aspell defining specific words for Zextras Server"
pkgdesclong=(
  "A dictionary for aspell defining specific words for Zextras Server"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends=(
  "carbonio-aspell-en"
)
section="utils"
priority="optional"

package() {
  cd "${srcdir}"
  mkdir -p "${pkgdir}"/opt/zextras/common/lib/aspell-0.60
  #echo -e "Zimbra\nzimlet\nzimlets\nComcast\nVMware\nSynacor\nZimbra" | ASPELL=/opt/zextras/common/bin/aspell create master --lang=en "${pkgdir}"/opt/zextras/common/lib/aspell-0.60/zimbra.rws
}
