# Watch OpenDKIM configuration for changes made by configd

[Unit]
Description=Watch Carbonio OpenDKIM config for changes
Documentation=https://zextras.com
After=carbonio-opendkim.service
BindsTo=carbonio-opendkim.service

[Path]
PathModified=/opt/zextras/conf/opendkim.conf
Unit=carbonio-opendkim-reload.service

[Install]
WantedBy=carbonio-mta.target
