targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-aspell"
pkgver="0.60.8"
pkgrel="1"
pkgdesc="A spell checker designed to eventually replace Ispell"
pkgdesclong=(
  "A spell checker designed to eventually replace Ispell"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends:apt=(
  "libncursesw5"
  "carbonio-spell-base"
)
depends:yum=(
  "ncurses-libs"
  "carbonio-spell-base"
)
makedepends:apt=(
  "libncursesw5-dev"
  "autopoint"
  "gettext"
  "texinfo"
)
makedepends:yum=(
  "gettext-devel"
  "ncurses-devel"
  "gettext"
  "texinfo"
)
section="utils"
priority="optional"
sources=(
  "https://github.com/GNUAspell/aspell/archive/rel-${pkgver}.tar.gz"
)
hashsums=(
  "SKIP"
)

build() {
  cd "${srcdir}/aspell-rel-${pkgver}"
  export LDFLAGS="-Wl,-rpath,/opt/zextras/common/lib"
  export CFLAGS="-O2"

  PERL_USE_UNSAFE_INC=1 ./autogen
  ./configure \
    --disable-static \
    --prefix=/opt/zextras/common \
    --sysconfdir=/opt/zextras/common/etc
  make
}

package() {
  cd "${srcdir}/aspell-rel-${pkgver}"
  make DESTDIR="${pkgdir}" install
}