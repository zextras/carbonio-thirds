pkgname="carbonio-clamav"
pkgver="1.0.4"
pkgrel="1"
pkgdesc="Anti-virus toolkit for Unix"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends__apt=(
  "carbonio-curl"
  "carbonio-libmilter"
  "carbonio-libxml2"
  "carbonio-openssl"
  "libjson-c4"
  "libpcre2-8-0"
  "zlib1g"
)
