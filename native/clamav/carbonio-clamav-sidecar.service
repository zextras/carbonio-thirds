[Unit]
Description=Carbonio Clamav Sidecar
Documentation=https://docs.zextras.com/
Requires=network-online.target
After=network-online.target
PartOf=carbonio-mta.target

[Service]
Slice=carbonio-mta.slice
User=carbonio-clamav
ExecStart=/usr/bin/consul connect envoy \
    -token-file /etc/carbonio/clamav/service-discover/token \
    -admin-bind localhost:0 \
    -sidecar-for carbonio-clamav
Restart=on-failure
RestartSec=15s
ExecReload=/usr/bin/kill -HUP $MAINPID
KillSignal=SIGINT
LimitNOFILE=65536

[Install]
WantedBy=multi-user.target
