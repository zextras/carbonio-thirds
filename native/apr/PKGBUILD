targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-apr"
pkgver="1.7.0"
pkgrel="1"
pkgdesc="Apache Portable Runtime Project"
pkgdesclong=(
  "Apache Portable Runtime Project"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
section="utils"
priority="optional"
sources=(
  "https://archive.apache.org/dist/apr/apr-${pkgver}.tar.gz"
)
hashsums=(
  "48e9dbf45ae3fdc7b491259ffb6ccf7d63049ffacbc1c0977cced095e4c2d5a2"
)

build() {
  cd "${srcdir}/apr-${pkgver}"

  export LDFLAGS="-Wl,-rpath,/opt/zextras/common/lib"
  export CFLAGS="-O2"
  ./configure --prefix=/opt/zextras/common
  make
}

package() {
  cd "${srcdir}/apr-${pkgver}"
  make install DESTDIR="${pkgdir}"
}
