targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-libart"
pkgver="2.3.21"
pkgrel="1"
pkgdesc="A library for high-performance 2D graphics"
pkgdesclong=(
  "A library for high-performance 2D graphics"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends:apt=(
  "carbonio-base"
)
depends:yum=(
  "carbonio-base"
)
section="libs"
priority="important"
sources=(
  "https://download.gnome.org/sources/libart_lgpl/2.3/libart_lgpl-${pkgver}.tar.bz2"
)
hashsums=(
  "fdc11e74c10fc9ffe4188537e2b370c0abacca7d89021d4d303afdf7fd7476fa"
)

build() {
  cd "${srcdir}/libart_lgpl-${pkgver}"
  export LDFLAGS="-Wl,-rpath,/opt/zextras/common/lib"
  export CFLAGS="-O2"

  ./configure \
  --prefix=/opt/zextras/common \
  --disable-static
  make -j16
}

package() {
  cd "${srcdir}/libart_lgpl-${pkgver}"
  make DESTDIR="${pkgdir}" install
  rm -rf "${pkgdir}"/opt/zextras/common/lib/*.la  
}
