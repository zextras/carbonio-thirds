targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-aspell-fr"
pkgver="0.50"
pkgrel="1"
pkgdesc="French dictionary for aspell"
pkgdesclong=(
  "French dictionary for aspell"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends=(
  "carbonio-aspell"
  "carbonio-spell-base"
)
section="utils"
priority="optional"
sources=(
  "https://ftp.gnu.org/gnu/aspell/dict/fr/aspell-fr-${pkgver}-3.tar.bz2"
  "aspell-fr.patch"
)
hashsums=(
  "f9421047519d2af9a7a466e4336f6e6ea55206b356cd33c8bd18cb626bf2ce91"
  "54bd2b3cd74a7b700a6ec1eb9c636565a83ad709a1625d18be647d9d71c2a232"
)

build() {
  export LDFLAGS="-Wl,-rpath,/opt/zextras/common/lib"
  export CFLAGS="-O2"
  
  cd "${srcdir}/aspell-fr-${pkgver}-3"
  patch -Np1 -i ../aspell-fr.patch

  ./configure \
    --vars ASPELL=/opt/zextras/common/bin/aspell \
    PREZIP=/opt/zextras/common/bin/prezip-bin
  make
}

package() {
  cd "${srcdir}/aspell-fr-${pkgver}-3"
  make DESTDIR="${pkgdir}" install
}