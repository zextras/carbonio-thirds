# Watch postfix configuration for changes made by configd

[Unit]
Description=Watch Carbonio Postfix config for changes
Documentation=https://zextras.com
After=carbonio-postfix.service
BindsTo=carbonio-postfix.service

[Path]
PathModified=/opt/zextras/common/conf/master.cf
Unit=carbonio-postfix-reload.service

[Install]
WantedBy=carbonio-mta.target
