pkgname="carbonio-memcached"
pkgver=1.6.38 # renovate: datasource=github-tags depName=memcached/memcached
pkgrel="4"
pkgdesc="Distributed memory object caching system"
arch=('x86_64')
maintainer="Zextras <packages@zextras.com>"
url="https://github.com/zextras"
depends__apt=(
  "carbonio-libevent"
)
makedepends__apt=(
  "pkg-config"
)
depends__yum=(
  "carbonio-libevent"
)
makedepends__yum=(
  "pkgconfig"
)
section="utils"
priority="optional"
source=(
  "https://www.memcached.org/files/memcached-${pkgver}.tar.gz"
  "${pkgname}.service"
)
sha256sums=('54d63742c6886dcdc4e0c87f4439a2930a876cd9f2bfa01d699b0c6bad1707b3'
  '274547ead8e3dc022ce0e716463063ae0fe56d90483c06841503409d5cfeb697')

build() {

  export LDFLAGS="-Wl,-rpath,/opt/zextras/common/lib"
  export PKG_CONFIG_PATH="/opt/zextras/common/lib/pkgconfig"

  cd "${srcdir}/memcached-${pkgver}"
  ./configure --prefix=/opt/zextras/common
  make -j16
}

package() {
  cd "${srcdir}/memcached-${pkgver}"
  make DESTDIR="${pkgdir}" install

  # systemd unit
  install -D -m 644 "${srcdir}/${pkgname}.service" \
    "${pkgdir}/usr/lib/systemd/system/${pkgname}.service"
}
