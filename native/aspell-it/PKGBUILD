targets=(
  "centos"
  "ubuntu"
)
pkgname="carbonio-aspell-it"
pkgver="2.4-20070901"
pkgrel="1"
pkgdesc="Italian dictionary for aspell"
pkgdesclong=(
  "Italian dictionary for aspell"
)
arch="amd64"
maintainer="Zextras <packages@zextras.com"
url="https://zextras.com"
depends=(
  "carbonio-aspell"
  "carbonio-spell-base"
)
section="utils"
priority="optional"
sources=(
  "https://sourceforge.net/projects/linguistico/files/Dizionario%20italiano%20per%20Aspell/${pkgver}-0/aspell6-it-${pkgver}-0.tar.bz2"
)
hashsums=(
  "6a5014880e51103e70d57a6b01e2d4bb5d51ae939f72ee9270b46891804203399c817dd73c3a0b91c004744a4e66a1a5b402d19be0a53db952152cdd3c1741e9"
)

build() {
  cd "${srcdir}/aspell6-it-${pkgver}-0"
  export LDFLAGS="-Wl,-rpath,/opt/zextras/common/lib"
  export CFLAGS="-O2"

  ./configure \
    --vars ASPELL=/opt/zextras/common/bin/aspell \
    PREZIP=/opt/zextras/common/bin/prezip-bin
  make
}

package() {
  cd "${srcdir}/aspell6-it-${pkgver}-0"
  make DESTDIR="${pkgdir}" install
}